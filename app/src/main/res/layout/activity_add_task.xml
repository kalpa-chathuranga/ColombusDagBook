<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kapal.root.colombusdagbook.AddTaskActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description_tv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/location_tv"
        android:layout_below="@+id/description_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created at :"
        android:id="@+id/created_at_tv"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/location_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaveTask"
        android:id="@+id/save_task_btn"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/longtitude_et"
        android:layout_alignEnd="@+id/longtitude_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/latitude_et"
        android:text="Lat"
        android:layout_below="@+id/location_et"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/longtitude_et"
        android:text="Long"
        android:layout_below="@+id/latitude_et"
        android:layout_alignLeft="@+id/latitude_et"
        android:layout_alignStart="@+id/latitude_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_et"
        android:layout_alignParentTop="true"
        android:text="desc"
        android:layout_toRightOf="@+id/created_at_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_et"
        android:text="loca"
        android:layout_below="@+id/description_et"
        android:layout_alignLeft="@+id/description_et"
        android:layout_alignStart="@+id/description_et"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="default_time_stamp"
        android:id="@+id/created_tv"
        android:layout_alignTop="@+id/created_at_tv"
        android:layout_toRightOf="@+id/created_at_tv"
        android:layout_toEndOf="@+id/created_at_tv" />

</RelativeLayout>
